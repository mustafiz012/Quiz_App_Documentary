<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.viavilab.quizapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.viavilab.quizapp.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
          <activity
            android:name="com.viavilab.quizapp.Start_Activity"
            android:configChanges="orientation|keyboardHidden" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.viavilab.quizapp.Level_Activity"
            android:configChanges="orientation|keyboardHidden" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.viavilab.quizapp.Stage_Activity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.viavilab.quizapp.PlayQuiz_Activity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.viavilab.quizapp.End_Game"
            android:configChanges="orientation|keyboardHidden" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.viavilab.quizapp.AboutActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.viavilab.quizapp.Rules_Activity"
            android:configChanges="orientation|keyboardHidden" 
            android:screenOrientation="portrait">
        </activity>
          <activity
            android:name="com.viavilab.quizapp.Popup_Dialog"
            android:configChanges="orientation|keyboardHidden" 
            android:screenOrientation="portrait">
        </activity>
        
           <!-- Start StartApp Code -->
        <activity
            android:name="com.startapp.android.publish.list3d.List3DActivity"
            android:taskAffinity="com.viavilab.quizapp.AppWall"
            android:theme="@android:style/Theme" />
        <activity
            android:name="com.startapp.android.publish.AppWallActivity"
            android:configChanges="orientation|keyboardHidden"
            android:taskAffinity="com.viavilab.quizapp.AppWall"
            android:theme="@android:style/Theme.Translucent" />
        <!-- End StartApp Code -->
       
    </application>

</manifest>